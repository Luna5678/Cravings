<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { page: "Food" }) %>

<body>
  <%- include('../partials/nav') %> 
  <main>

    <!-- Function for phone number format -->
    <% const formatPhoneNumber=(phone)=> { %>
      <% let match=phone.match(/(\d{3})(\d{3})(\d{4})/); %>
      <% if (match) { %>
        <% return ['(', match[1], ') ' , match[2], '-' , match[3]].join('') %>
      <% } else console.log("error with phone format") %>
    <% } %>

    <header>
      <img src="<%= restaurant.image %>" alt="">
    </header>

    <h1 class="text-center"><span class="red-heading"><%= restaurant.name %></span></h1>

    <div class="container-md mt-3">
      <div class="row">
        <div class="col-md-6">
          <h3>Who</h3>
          <p>
            <%= restaurant.name %>
          </p>
          
          <h3>What</h3>
          <p>
            <% const categoryArray=restaurant.categories %>
              <% categoryArray.forEach(element=> { %>
                #<%= element %>
                  <% }) %>
          </p>

          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            View Menu
          </button>
          
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                  <h2 class="modal-title" id="exampleModalLabel">
                    Menu
                  </h2>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <h3 class="text-center"><%= restaurant.name %> </h3>
                  <h5 class="text-center mb-4">
                    <a href="tel:<%= restaurant.phone %>"><%= formatPhoneNumber(restaurant.phone) %></a>
                  </h5>
                  <div class="container-fluid">
                    <div class="row align-items-start">
                      <div class="col-lg-6">
                        <h6>Appetizers</h6>
                        <p>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                        </p>
                        <h6>Entrees</h6>
                        <p>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <h6>Drinks</h6>
                        <p>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                        </p>
                        <h6>Dessert</h6>
                        <p>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                          Lorem Ipsum....................00<br>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>


          <h3 class="mt-3">Where</h3>
          <div class="lh-1">
            <p><%= restaurant.location.address %>
              <%= restaurant.location.city %>, <%= restaurant.location.state %>
                  <%= restaurant.location.zipcode %>
            </p>
            <p>
              <a href="tel:<%= restaurant.phone %>">
                
                <p><%= formatPhoneNumber(restaurant.phone) %></p>
              </a>
            </p>
          </div>
        </div>
        
        <div class="col-md-6">
          <h3>When</h3>
          <p>Sunday: <%= restaurant.hours[0] %></p>
          <p>Monday: <%= restaurant.hours[1] %></p>
          <p>Tuesday: <%= restaurant.hours[2] %></p>
          <p>Wednesday: <%= restaurant.hours[3] %></p>
          <p>Thursday: <%= restaurant.hours[4] %></p>
          <p>Friday: <%= restaurant.hours[5] %></p>
          <p>Saturday: <%= restaurant.hours[6] %></p>
        </div>

      </div>
      
    </div>
    
    <!-- Reviews -->
    <div class="container">
    <h3>Why</h3>
    <hr>
    
      <% for (let i=0; i < reviews.length; i++) { %>
        <% const review = reviews[i] %> 

        <!-- stars -->
        <% for ( let idx=0; idx < 5; idx++) { %> 
          <% if (review.rating > idx) { %> 
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#54C981" class="bi bi-star-fill"
              viewBox="0 0 16 16">
              <path
                d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
            </svg>
            <% } else { %>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#54C981" class="bi bi-star"
                viewBox="0 0 16 16">
                <path
                  d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
              </svg>
        <% } } %> 


        <p class="fst-italic"><%= (review.createdAt).toLocaleDateString('en-US') %></p>
        <p><%= review.content %></p>
      <% } %> 
      
    </div>

  </main>
</body>
</html>