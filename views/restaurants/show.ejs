  <main>

    <!-- Function for phone number format -->
    <% const formatPhoneNumber=(phone)=> { %>
      <% let match=phone.match(/(\d{3})(\d{3})(\d{4})/); %>
      <% if (match) { %>
        <% return ['(', match[1], ') ' , match[2], '-' , match[3]].join('') %>
      <% } else console.log("error with phone format") %>
    <% } %>

