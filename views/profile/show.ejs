<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { page: "Profile" }) %>

<body>
  <%- include('../partials/nav') %>
  <main>
    <h1><%= profile.username %>'s Profile</h1>
    <img src="<%= profile.avatar %> " alt="<%= profile.username %> avatar image" class="img-fluid rounded-circle profile-avatar-img mb-4">
    <h2>About me:</h2>
    <p><%= profile.bio %></p>

    <h2>Reviews History</h2>
    <hr />
    <% for (let i = 0; i < reviews.length; i++) { %> 
      <% const review = reviews[i] %> 
      <h5><%= review.restaurant %></h5>
      <div><%= review.rating %></div>
      <p><%= review.content %></p>
    <% } %> 

    <% if (typeof user !=='undefined' ) { %>
      <% if (profile.id===user.id) { %>
        <a href="/<%= user.id %>/edit">Edit My Account</a>
      <% } %>
    <% } %>
  </main>
</body>
</html>